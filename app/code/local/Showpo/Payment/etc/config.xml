<?xml version="1.0"?>
<config>
  <modules>
    <Showpo_Payment>
      <version>1.0.0</version>
    </Showpo_Payment>
  </modules>
    <global>
        <helpers>
            <payment>
                <class>Showpo_Payment_Helper</class>
            </payment>
        </helpers>

        <models>
            <showpo>
                <class>Showpo_Payment_Model</class>
            </showpo>
        </models>

        <resources>
            <showpo_setup>
                <setup>
                    <module>Showpo_Payment</module>
                    <class>Showpo_Payment_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </showpo_setup>
            <showpo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </showpo_write>
            <showpo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </showpo_read>
        </resources>

        <fieldsets>
            <sales_convert_quote_payment>
                <showpo_ref>
                    <to_order_payment>*</to_order_payment>
                </showpo_ref>
            </sales_convert_quote_payment>
        </fieldsets>

    </global>

    <default>
        <payment>
            <showpo>
                <active>1</active>
                <model>showpo/showpo</model>
                <order_status>pending</order_status>
                <title>ShowPo Payment</title>
                <submit_url>â€‹https://uat.showpo.com/test-api.php</submit_url>
                <payment_action>sale</payment_action>
                <allowspecific>0</allowspecific>
                <order_status>processing</order_status>
            </showpo>
        </payment>
    </default>
</config> 